{
    "name": "aem-component-builder",
    "displayName": "AEM Component Builder",
    "description": "Creates the base component structure for AEM components (TouchUI and Sightly).",
    "version": "0.0.1",
    "publisher": "mansquatch",
    "license": "GNU LICENSE",
    "engines": {
        "vscode": "^1.30.0"
    },
    "keywords": [
        "AEM",
        "Adobe Experience Manager",
        "JCR",
        "CRX",
        "CMS"
    ],
    "icon": "images/icon.jpg",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.buildAEMComponent"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.buildAEMComponent",
                "title": "Build AEM Component"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jbmatheson/AEM-Component-Builder"
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "eslint": "^4.11.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "chokidar": "^2.0.4",
        "fs-extra": "^7.0.1",
        "replace-in-file": "^3.4.3"
    }
}
